{
    "name": "Sovereign Machine Azure Pack",
    "type": "dark",
    "colors": {
        // --- FUNDAÇÃO (Onyx & Oceanic Deep) ---
        "editor.background": "#0a0a0a",
        "editor.foreground": "#ffffff",
        "sideBar.background": "#080808",
        "titleBar.activeBackground": "#074f7f", 
        "statusBar.background": "#074f7f",      
        "statusBar.foreground": "#ffffff",

        // --- ENERGIA (Azure Flow #12d3f0) ---
        "activityBar.foreground": "#12d3f0",
        "editorCursor.foreground": "#12d3f0",
        "editorLineNumber.activeForeground": "#12d3f0",
        "progressBar.background": "#12d3f0",
        "textLink.foreground": "#12d3f0",

        // --- SELEÇÃO E FOCO (Transparência Calibrada) ---
        "editor.selectionBackground": "#12d3f033", 
        "editor.wordHighlightBackground": "#12d3f022",
        "editor.wordHighlightStrongBackground": "#12d3f044",
        "editor.lineHighlightBackground": "#074f7f15", 

        // --- RUÍDO VISUAL (Cinza Antracite) ---
        "editorLineNumber.foreground": "#333333",
        "sideBarTitle.foreground": "#757575"
    },
    "tokenColors": [
        {
            "name": "Ruído Visual",
            "scope": ["comment", "string", "punctuation", "keyword.operator", "meta.brace"],
            "settings": { "foreground": "#757575" }
        },
        {
            "name": "Estrutura e Ação (Azure Flow)",
            "scope": [
                "keyword",
                "storage.type",
                "storage.modifier",
                "entity.name.function",
                "support.function",
                "keyword.control.directive"
            ],
            "settings": {
                "foreground": "#12d3f0",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Dados e Identificadores (Branco)",
            "scope": ["variable", "constant", "entity.name.type"],
            "settings": { "foreground": "#ffffff" }
        }
    ]
    
}